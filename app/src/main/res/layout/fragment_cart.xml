<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragments.CartFragment">

   <com.google.android.material.appbar.AppBarLayout
       android:id="@+id/appbar_layout"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       app:layout_constraintTop_toTopOf="parent">

       <androidx.constraintlayout.widget.ConstraintLayout
           android:id="@+id/relative"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:background="@color/purple"
           app:layout_constraintStart_toStartOf="parent"
           app:layout_constraintTop_toTopOf="parent">

           <TextView
               android:id="@+id/cart_back"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_alignParentTop="true"
               android:padding="10dp"
               android:text="Cart"
               android:textColor="@color/white"
               android:textSize="20sp"
               android:drawablePadding="10dp"
               app:layout_constraintStart_toStartOf="parent"
               app:layout_constraintTop_toTopOf="parent"
               app:drawableLeftCompat="@drawable/ic_round_arrow_back_ios_new_24" />

           <androidx.constraintlayout.widget.ConstraintLayout
               android:id="@+id/linearLayout2"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:layout_marginHorizontal="20dp"
               app:layout_constraintEnd_toEndOf="parent"
               app:layout_constraintStart_toStartOf="parent"
               app:layout_constraintTop_toBottomOf="@+id/cart_back">


               <TextView
                   android:id="@+id/payment_txt1"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_marginStart="20dp"
                   android:text="Cart"
                   android:textColor="@color/white"
                   android:textSize="18sp"
                   app:layout_constraintStart_toStartOf="parent"
                   app:layout_constraintTop_toTopOf="parent" />

               <TextView
                   android:id="@+id/payment_txt2"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_alignTop="@+id/payment_txt1"
                   android:layout_marginStart="20dp"
                   android:layout_toEndOf="@+id/payment_txt1"
                   android:text="Address"
                   android:textColor="@color/white"
                   android:textSize="18sp"
                   app:layout_constraintBottom_toBottomOf="@+id/payment_txt1"
                   app:layout_constraintStart_toEndOf="@+id/payment_txt1"
                   app:layout_constraintTop_toTopOf="@+id/payment_txt1" />



               <TextView
                   android:id="@+id/payment_txt4"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_alignTop="@+id/payment_txt2"
                   android:layout_marginStart="20dp"
                   android:layout_toEndOf="@+id/payment_txt2"
                   android:text="Summary"
                   android:textColor="@color/white"
                   android:textSize="18sp"
                   app:layout_constraintStart_toEndOf="@+id/payment_txt2"
                   app:layout_constraintTop_toTopOf="@+id/payment_txt2" />

               <TextView
                   android:id="@+id/payment_txt3"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_alignTop="@+id/payment_txt4"
                   android:layout_alignParentEnd="true"
                   android:layout_marginStart="20dp"
                   android:layout_toEndOf="@+id/payment_txt4"
                   android:text="Payment"
                   android:textColor="@color/white"
                   android:textSize="18sp"
                   app:layout_constraintBottom_toBottomOf="@+id/payment_txt4"
                   app:layout_constraintStart_toEndOf="@+id/payment_txt4"
                   app:layout_constraintTop_toTopOf="@+id/payment_txt4" />


               <ImageView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:scaleX="0.5"
                   android:scaleY="0.5"
                   android:src="@drawable/empty_circle"
                   app:layout_constraintEnd_toEndOf="@+id/payment_txt3"
                   app:layout_constraintStart_toStartOf="@+id/payment_txt3"
                   app:layout_constraintTop_toBottomOf="@+id/payment_txt3" />

               <ImageView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:scaleX="0.5"
                   android:scaleY="0.5"
                   android:src="@drawable/empty_circle"
                   app:layout_constraintEnd_toEndOf="@+id/payment_txt4"
                   app:layout_constraintStart_toStartOf="@+id/payment_txt4"
                   app:layout_constraintTop_toBottomOf="@+id/payment_txt4" />

               <ImageView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_below="@+id/payment_txt3"
                   android:layout_alignStart="@+id/payment_txt4"
                   android:layout_alignEnd="@+id/payment_txt4"
                   android:scaleX="0.5"
                   android:scaleY="0.5"
                   android:src="@drawable/filled_circle"
                   app:layout_constraintEnd_toEndOf="@+id/payment_txt1"
                   app:layout_constraintStart_toStartOf="@+id/payment_txt1"
                   app:layout_constraintTop_toBottomOf="@+id/payment_txt1" />

               <ImageView
                   android:id="@+id/imageView8"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_below="@+id/payment_txt4"
                   android:layout_alignStart="@+id/payment_txt3"
                   android:layout_alignEnd="@+id/payment_txt3"
                   android:scaleX="0.5"
                   android:scaleY="0.5"
                   android:src="@drawable/empty_circle"
                   app:layout_constraintEnd_toEndOf="@+id/payment_txt2"
                   app:layout_constraintStart_toStartOf="@+id/payment_txt2"
                   app:layout_constraintTop_toBottomOf="@+id/payment_txt2" />

           </androidx.constraintlayout.widget.ConstraintLayout>




       </androidx.constraintlayout.widget.ConstraintLayout>



   </com.google.android.material.appbar.AppBarLayout>



            <androidx.core.widget.NestedScrollView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:background="#EBEFEF"
                app:layout_constraintTop_toBottomOf="@+id/appbar_layout"
                app:layout_constraintBottom_toBottomOf="parent"
                >


                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">


                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/consdsd"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent">


                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/cart_recyclerview"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:nestedScrollingEnabled="false"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            tools:itemCount="2"
                            tools:listitem="@layout/cart_card_view" />

                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/consh"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@color/white"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/consdsd">


                        <TextView
                            android:id="@+id/textView9"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="20dp"
                            android:fontFamily="@font/metropolis_semibold"
                            android:text="Price Details(2 items)"
                            android:textStyle="bold"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />


                        <TextView
                            android:id="@+id/textView10"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:text="Price Details(2 items)"
                            app:layout_constraintStart_toStartOf="@+id/textView9"
                            app:layout_constraintTop_toBottomOf="@+id/textView9" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="20dp"
                            android:text="$3,798"
                            app:layout_constraintBottom_toBottomOf="@+id/textView10"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="@+id/textView10" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="20dp"
                            android:text="-$2,550"
                            app:layout_constraintBottom_toBottomOf="@+id/textView11"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="@+id/textView11" />

                        <TextView
                            android:id="@+id/textView11"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:text="Discount on MRP"
                            app:layout_constraintStart_toStartOf="@+id/textView10"
                            app:layout_constraintTop_toBottomOf="@+id/textView10" />

                        <TextView
                            android:id="@+id/textView12"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:text="Coupon Discount"
                            app:layout_constraintStart_toStartOf="@+id/textView11"
                            app:layout_constraintTop_toBottomOf="@+id/textView11" />

                        <TextView
                            android:id="@+id/textView14"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="20dp"
                            android:text="Apply Coupon"
                            android:textColor="@color/orange"
                            app:layout_constraintBottom_toBottomOf="@+id/textView12"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="@+id/textView12" />


                        <View
                            android:id="@+id/view"
                            android:layout_width="match_parent"
                            android:layout_height="2dp"
                            android:layout_marginHorizontal="20dp"
                            android:layout_marginTop="10dp"
                            android:background="@color/black"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/textView12" />

                        <TextView
                            android:id="@+id/textView13"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:fontFamily="@font/metropolis_semibold"
                            android:text="Total Amount"
                            app:layout_constraintStart_toStartOf="@+id/textView12"
                            app:layout_constraintTop_toBottomOf="@+id/view" />

                        <TextView
                            android:id="@+id/totalprice_txt"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="20dp"
                            android:fontFamily="@font/metropolis_semibold"
                            android:text="$1,248"
                            app:layout_constraintBottom_toBottomOf="@+id/textView13"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="@+id/textView13" />
                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/constraintLayout3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        app:layout_constraintTop_toBottomOf="@+id/consh">

                        <TextView
                            android:id="@+id/textView16"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/metropolis_semibold"
                            android:paddingStart="20dp"
                            android:text="You may also like"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="20dp"
                            android:fontFamily="@font/metropolis_semibold"
                            android:text="View All"
                            app:layout_constraintBottom_toBottomOf="@+id/textView16"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="@+id/textView16" />

                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/cart_Rv_HZ"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:nestedScrollingEnabled="false"
                            app:layout_constraintTop_toBottomOf="@+id/textView16" />


                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <Button
                        android:id="@+id/proceed_BTN"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="50dp"
                        android:layout_marginTop="10dp"
                        android:background="@color/purple"
                        android:text="Proceed"
                        android:textAllCaps="false"
                        android:textColor="@color/white"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/constraintLayout3" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:text=""
                        app:layout_constraintTop_toBottomOf="@+id/proceed_BTN"/>



                </androidx.constraintlayout.widget.ConstraintLayout>


            </androidx.core.widget.NestedScrollView>




</androidx.constraintlayout.widget.ConstraintLayout>